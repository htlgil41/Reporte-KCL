<form class="refined-auth-form" id="form-token">
  <div class="form-container-box">
    <div class="form-content-inner">      
      <div class="input-relative-group">
        <input 
          type="password" 
          id="token"
          name="code" 
          required 
          placeholder="000-000-000" 
          class="elegant-token-input"
        />
        <div class="input-decoration-line"></div>
      </div>

      <button type="submit" class="solid-blue-btn">
        <span>Ingresar al Sistema</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </button>
    </div>
  </div>
</form>
<style>
  .refined-auth-form {
    width: 100%;
    max-width: 320px;
    margin: 0 auto;
  }
  .form-container-box {
    background: #ffffff;
    padding: 2rem;
    border-radius: 1.75rem;
    border: 1px solid #eef2f6; /* Borde muy fino y limpio */
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.03);
  }
  .form-label-compact {
    display: block;
    text-align: center;
    font-size: 0.65rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #94a3b8;
    margin-bottom: 1.25rem;
  }
  .input-relative-group {
    position: relative;
    margin-bottom: 1.5rem;
  }
  .elegant-token-input {
    width: 100%;
    padding: 1rem;
    background: #f8fafc;
    border: 1px solid #f0f0f0;
    border-radius: 1rem;
    font-family: ui-monospace, monospace;
    font-size: 1.25rem;
    text-align: center;
    letter-spacing: 0.2em;
    color: #0f172a;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .elegant-token-input::placeholder {
    letter-spacing: 0;
    font-size: 0.85rem;
    color: #cbd5e1;
    font-family: sans-serif;
  }
  .elegant-token-input:focus {
    outline: none;
    background: #ffffff;
    border-color: #155dfb;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(21, 93, 251, 0.08);
  }
  .solid-blue-btn {
    width: 100%;
    background: #155dfb;
    color: white;
    padding: 1rem;
    border-radius: 1rem;
    border: none;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 16px -4px rgba(21, 93, 251, 0.25);
  }
  .solid-blue-btn:hover {
    background: #0d4ed8;
    transform: translateY(-2px);
    box-shadow: 0 12px 20px -5px rgba(21, 93, 251, 0.35);
  }
  .solid-blue-btn:active {
    transform: scale(0.97);
  }
</style>

<script>
  const formlogin = document.getElementById('form-token') as HTMLFormElement;
  if (formlogin) {
    formlogin.addEventListener('submit', async (e) =>{
      e.preventDefault();

      const formDataAtuh = new FormData(formlogin);
      const data = Object.fromEntries(formDataAtuh.entries());
      console.log(data)
      if ('code' in data){
        try {
          
          const post_for_auth = await fetch(
            'URL/',
            {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              credentials: 'include',
              body: JSON.stringify(data),
            },
          );
          const data_auth = await post_for_auth.json();
          if (data_auth) window.location.href = '/dash'
        } catch (error) {
          
          alert("Error en el fectch")
        }
      }
    });
  }

</script>