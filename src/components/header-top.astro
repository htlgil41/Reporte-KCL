---
const { 
  r_total = '',
  r_gtotal = '',
  r_impuesto = '',
  r_ticket = ''
} = Astro.props;

const FormatteNumber = (value: number) =>{
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(value);
}
---

<header class="bg-white border-b border-slate-100 py-10 px-6 shadow-[0_4px_12px_rgba(0,0,0,0.02)]">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row lg:items-center justify-between gap-8">
      
      <div class="space-y-1">
        <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-[#155dfb] animate-pulse"></span>
            <span class="text-[10px] font-black text-[#155dfb] uppercase tracking-[0.3em]">Sistema de Control</span>
        </div>
        <h1 class="text-3xl font-black text-slate-900 tracking-tight">Dashboard KCL</h1>
        <p class="text-slate-900 text-sm font-medium">Resumen consolidado de operaciones</p>
      </div>

      <div class="relative group">
        <span class="absolute -top-6 left-2 text-[10px] font-bold text-slate-700 uppercase tracking-widest">
          Totales Consolidados
        </span>
        
        <div class="metrics-responsive-container" id="cards_totales">
            
            <div class="metric-box border-b lg:border-b-0 lg:border-r border-slate-100">
                <p class="metric-label">Totales</p>
                <div class="flex items-center gap-2">
                    <span class="metric-value-compact">{FormatteNumber(r_total)}</span>
                    <span class="text-green-900">↑</span>
                </div>
            </div>

            <div class="metric-box border-b lg:border-b-0 lg:border-r border-slate-100">
                <p class="metric-label">Subtotales</p>
                <div class="flex items-center gap-2">
                    <span class="metric-value-compact">{FormatteNumber(r_gtotal)}</span>
                    <span class="text-green-900">↑</span>
                </div>
            </div>

            <div class="metric-box border-b lg:border-b-0 lg:border-r border-slate-100">
                <p class="metric-label">Impuesto Total</p>
                <div class="flex items-center gap-2">
                    <span class="metric-value-compact">{FormatteNumber(r_impuesto)}</span>
                    <span class="text-red-900 rotate-180">↑</span>
                </div>
            </div>

            <div class="metric-box">
                <p class="metric-label">Tickets Totales</p>
                <span class="metric-value-compact">#{r_ticket}</span>
            </div>

        </div>
      </div>

    </div>
</header>

<style is:global>
  .metrics-responsive-container {
    display: grid;
    grid-template-cols: repeat(2, 1fr);
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 1.5rem;
    overflow: hidden;
    min-width: 280px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
    transition: all 0.3s ease;
  }
  @media (min-width: 1024px) {
    .metrics-responsive-container {
      display: flex;
      grid-template-cols: none;
      min-width: fit-content;
    }
    .metric-box {
      min-width: 140px;
    }
  }
  .metric-box {
    padding: 1rem 1.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: white;
    transition: all 0.3s ease;
  }
  .metric-box:hover {
    background: #f8fbff;
  }
  .metric-label {
    font-size: 8px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #94a3b8;
    margin-bottom: 2px;
  }
  .metric-value-compact {
    font-size: 1.1rem;
    font-weight: 900;
    color: #0f172a;
    letter-spacing: -0.02em;
    line-height: 1.2;
    transition: color 0.3s ease;
  }
  .metrics-responsive-container:hover {
    border-color: #155dfb;
  }
  .metrics-responsive-container:hover .metric-value-compact {
    color: #155dfb;
  }
  .trend-badge-mini {
    font-size: 9px;
    color: #10b981;
    font-weight: 900;
    background: #ecfdf5;
    padding: 1px 4px;
    border-radius: 4px;
  }
</style>