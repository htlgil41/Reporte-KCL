---
const { texto, subtexto } = Astro.props;
---

<header class="bg-white border-b border-slate-100 py-10 px-6 shadow-[0_4px_12px_rgba(0,0,0,0.02)]">
    <div class="max-w-7xl mx-auto flex flex-col lg:flex-row lg:items-center justify-between gap-8">
      
      <div class="space-y-1">
        <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-blue-600 animate-pulse"></span>
            <span class="text-[10px] font-black text-blue-600 uppercase tracking-[0.3em]">Sistema de Control</span>
        </div>
        <h1 class="text-3xl font-black text-slate-900 tracking-tight">{texto}</h1>
        <p class="text-slate-400 text-sm font-medium">{subtexto}</p>
      </div>

      <div class="relative group">
        <span class="absolute -top-6 left-2 text-[10px] font-bold text-slate-400 uppercase tracking-widest">
            Consultar Fecha de Operaci√≥n
        </span>
        
        <div class="flex items-center bg-white border border-slate-200 p-1.5 rounded-2xl shadow-sm 
                    transition-all duration-300 focus-within:ring-4 focus-within:ring-blue-500/10 
                    focus-within:border-blue-400 group-hover:shadow-md">
            
            <div class="pl-4 pr-2 text-slate-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>

            <input 
              type="date" 
              class="bg-transparent border-none text-slate-700 font-bold text-sm focus:ring-0 cursor-pointer pr-4 py-2"
            />

            <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-xl 
                           text-xs font-black uppercase tracking-widest shadow-lg shadow-blue-200 
                           transition-all active:scale-95 flex items-center gap-2">
              <span>Actualizar</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
        </div>
      </div>

    </div>
</header>