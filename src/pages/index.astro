---
import '../styles/global.css';
import LoginLayout from '../layouts/Login.astro';
import FormLogin from '../components/form-login.astro';
import Footer from '../components/footer.astro';
---

<LoginLayout>
  <main class="min-h-screen flex flex-col md:flex-row">
    <section class="presentation-side">
      <div class="presentation-content">
        
        <div class="logo-wrapper">
          <div class="logo-box">
            <span class="text-white font-black text-2xl">K</span>
          </div>
          <div class="flex flex-col">
            <span class="text-white font-black text-xl tracking-widest leading-none">Reporte KCL</span>
            <span class="text-blue-300 text-[10px] font-bold uppercase tracking-[0.3em] mt-1">Efectividad POS</span>
          </div>
        </div>

        <div class="mb-12">
          <h1 class="text-4xl md:text-5xl font-black text-white leading-[1.1] tracking-tight">
            Efectividad <br/> 
            <span class="text-blue-300">POS</span> <br/> 
            Real.
          </h1>
          <p class="text-blue-100/70 mt-6 text-lg max-w-sm font-medium leading-relaxed">
            Accede a una visión profunda de la efectividad de cada sucursal MaraPlus disponible
          </p>
        </div>

        <div class="stats-stack">
          <div class="glass-info-card group border-l-4 border-l-emerald-500">
            <div class="flex items-center gap-4">
              <div class="glass-icon-box text-emerald-300 group-hover:bg-emerald-500 group-hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="glass-label text-emerald-300">Rango de Información</p>
                <div class="flex flex-col">
                  <span class="text-white font-bold text-sm">Historial desde Enero 2024</span>
                  <span class="text-blue-200 text-[10px] font-black uppercase tracking-wider">Hasta la fecha actual</span>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="glass-bg-accent"></div>
    </section>

    <section class="login-side">
      <div class="login-compact-box">
        <div class="security-badge">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 4.925-3.467 9.043-8 9.944a11.954 11.954 0 01-8-9.944c0-.681.056-1.35.166-2.001zm8 2.001a1 1 0 00-1 1v2a1 1 0 002 0v-2a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Acceso disponible
        </div>

        <header class="text-center mb-8">
          <h2 class="text-2xl font-black text-slate-900 tracking-tight">Autenticación</h2>
          <p class="text-slate-400 text-xs font-bold uppercase tracking-widest mt-2">Introduce su token</p>
        </header>

        <FormLogin></FormLogin>

        <div class="mt-8 text-center">
          <a href="mailto:agil@maraplus.com" class="text-[10px] font-black text-blue-800 transition-colors uppercase tracking-[0.2em]">
            ¿Problemas con tu token? Contactar Soporte
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer></Footer>

</LoginLayout>

<style is:global>
  main {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  @media (min-width: 768px) {
    main {
      flex-direction: row;
    }
    .presentation-side { width: 45%; }
    .login-side { width: 55%; }
  }
  .presentation-side {
    position: relative;
    background: radial-gradient(circle at top left, #155dfb, #0d3eb3);
    padding: 4rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    color: white;
  }
  .presentation-content {
    position: relative;
    z-index: 10;
  }

  .stats-stack {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 3rem;
    max-width: 380px;
  }
  .glass-info-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-radius: 1.5rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .glass-info-card:hover {
    transform: translateX(12px);
    background: rgba(255, 255, 255, 0.07);
    border-color: rgba(255, 255, 255, 0.2);
  }
  .glass-icon-box {
    width: 3.25rem;
    height: 3.25rem;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .login-side {
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
  }
  .login-compact-box {
    width: 100%;
    max-width: 380px;
    padding: 3rem;
    background: #ffffff;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.03), 0 1px 2px rgba(0, 0, 0, 0.02);
    border-radius: 2.5rem;
    border: 1px solid #cccccc5b;
  }
  .security-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: fit-content;
    margin: 0 auto 2rem auto;
    padding: 0.5rem 1rem;
    background: #f0fdf4;
    color: #16a34a;
    border-radius: 99px;
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .compact-input {
    width: 100%;
    border: none;
    background: #f1f5f9;
    padding: 1.25rem;
    border-radius: 1.25rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-weight: 700;
    font-size: 1.3rem;
    letter-spacing: 0.4em;
    text-align: center;
    color: #0f172a;
    transition: all 0.3s ease;
  }
  .compact-input:focus {
    outline: none;
    background: #ffffff;
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.08);
    transform: translateY(-2px);
  }
  .compact-submit-btn {
    width: 100%;
    background: #0f172a;
    color: white;
    padding: 1.25rem;
    border-radius: 1.25rem;
    font-size: 0.9rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
  }
  .compact-submit-btn:hover {
    background: #2563eb;
    box-shadow: 0 15px 30px rgba(37, 99, 235, 0.2);
    transform: translateY(-2px);
  }
  .compact-submit-btn:active {
    transform: scale(0.97);
  }
  .presentation-content, .login-compact-box {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>