---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import FormLogin from '../components/form-login.astro';
---

<Layout>
	<main class="min-h-screen flex items-center justify-center p-6 relative overflow-hidden">
      
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-blue-50 rounded-full blur-3xl opacity-60"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-slate-50 rounded-full blur-3xl opacity-80"></div>

      <div class="relative w-full max-w-4xl grid md:grid-cols-2 bg-white border border-slate-100 rounded-4xl shadow-[0_20px_50px_rgba(0,0,0,0.05)] overflow-hidden">
        
        <div class="hidden md:flex flex-col justify-between p-10 bg-blue-600 relative overflow-hidden">
          <svg class="absolute inset-0 opacity-10" width="100%" height="100%"><rect width="100%" height="100%" fill="url(#grid)"/><defs><pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse"><path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/></pattern></defs></svg>

          <div class="relative">
            <div class="h-12 w-12 bg-white/20 backdrop-blur-md rounded-2xl mb-8 flex items-center justify-center border border-white/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="20" x2="12" y2="10"/><line x1="18" y1="20" x2="18" y2="4"/><line x1="6" y1="20" x2="6" y2="16"/></svg>
            </div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Reporte KCL</h1>
            <p class="text-blue-100/80 mt-2 font-light">Consolidado de ingresos operativos por cada MaraPlus.</p>
          </div>

          <div class="relative bg-white p-6 rounded-2xl shadow-xl shadow-blue-900/20 transform hover:-translate-y-1 transition-transform duration-300">
            <span class="text-[10px] font-bold text-blue-600 uppercase tracking-[0.2em]">Ganancias Totales</span>
            <div class="flex items-baseline gap-1 mt-2">
              <h2 class="text-3xl font-black text-slate-800">Desde 2024 hasta hoy</h2>
            </div>
            
            <div class="mt-6 flex items-center justify-between text-xs font-semibold">
              <span class="text-slate-500 italic">Ultima actualizacion el dia de ayer!!</span>
              <span class="text-blue-600 flex items-center gap-1">
                <span class="relative flex h-2 w-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-600"></span>
                </span>
                En vivo
              </span>
            </div>
          </div>
        </div>

        <div class="p-10 md:p-14 flex flex-col justify-center bg-white">
          <div class="mb-10">
            <h2 class="text-2xl font-bold text-slate-900">Bienvenido de nuevo</h2>
            <p class="text-slate-500 text-sm mt-1">Ingresa tu clave de acceso para entrar al sistema.</p>
          </div>

          <FormLogin></FormLogin>
        </div>

      </div>
    </main>
</Layout>
